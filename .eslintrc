{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "curly": ["error", "all"],
    "linebreak-style": ["error", "unix"],
    "no-console": "off",
    "no-unused-vars": "error",
    "prefer-template": "error",
    "spaced-comment": ["error", "always"]
  }
}
